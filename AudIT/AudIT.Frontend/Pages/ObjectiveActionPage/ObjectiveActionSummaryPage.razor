                new Dictionary
                    <string, object>()
                    {
                        { "ObjectiveActionId", Guid.Parse(ObjectiveActionId) },
                        { "AuditMissionId", Guid.Parse(_currentObjective.auditMissionId) },
                        { "DepartmentId", DepartmentId },
                        {
                            "OnActivityCreated", new EventCallback<ActivityWithDepartViewModel>(this, OnActivityCreated)
                        }
                    }, new DialogOptions()
                {
                    Width = "700px",
                    Height = "500px",
