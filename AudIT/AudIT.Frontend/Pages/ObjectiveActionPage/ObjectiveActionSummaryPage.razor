                            Console.WriteLine("Element found !");
                            <RadzenCard Variant="Variant.Outlined">
                                <RadzenText Name="forControl1" Text="@item"></RadzenText>
                            </RadzenCard>
                        }
                    </RadzenStack>
                </RadzenStack>

            </RadzenStack>
        </RadzenStack>
    </RadzenCard>
