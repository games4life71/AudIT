                    }
                }, new DialogOptions()
                {
                    Width = "1000px",
                    Height = "750px",
                    Draggable = false,
                    Resizable = false
                }
            );

        }

        catch (Exception e)
        {
            Console.WriteLine(e);
            throw;
        }
        return Task.CompletedTask;
    }

    private async Task OnCreateFiapDialogClose(BaseObjActionFiapViewmodel newFiap)
    {
        _fiaps.Add(newFiap);
        StateHasChanged();
        await fiapDataGrid.Reload();

        // await InvokeAsync(StateHasChanged);
    }

    private async void AddNewActivityNavigate(MouseEventArgs obj)
    {
        var auditMission = await _auditMissionService.GetAuditMissionById(Guid.Parse(_currentObjective.auditMissionId));
        Guid DepartmentId = Guid.Empty;
